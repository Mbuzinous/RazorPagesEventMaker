@page
@using RazorPagesEventMaker.Models
@model RazorPagesEventMaker.Pages.Events.IndexModel
@{
    ViewData["tittle"] = "Index";
}

<h1>List of events</h1>
<p>
    <a asp-page="CreateEvent">Create New</a>
</p>
<form method="get">
    <p>
        Search: <input type="text" asp-for="FilterCriteria" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thread>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Place
            </th>
            <th>
                DateTime
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thread>
    <tbody>
        @foreach (Event item in Model.Events)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.City
                </td>
                <td>
                    @item.DateTime
                </td>
                <td>
                    <a asp-page="EditEvent" asp-route-id="@item.Id">Edit</a>
                </td>
                <td>
                    <a asp-page-handler="Delete" asp-route-id="@item.Id">
                        <span class="material-symbols-outlined">Delete</span>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>